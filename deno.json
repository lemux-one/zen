{
  "imports": {
    "$std/": "https://deno.land/std@0.224.0/"
  },
  "tasks": {
    "dev": "deno run --watch src/main.ts"
  },
  "compilerOptions": {
    "allowJs": false,
    "strict": true
  },
  "lint": {
    "include": ["src/", "test/"],
    "exclude": ["test/mockdata/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/", "test/"],
    "exclude": ["test/mockdata/"]
  }
}
